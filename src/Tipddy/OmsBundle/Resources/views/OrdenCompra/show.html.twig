{% extends 'TipddyOmsBundle::layout.html.twig' %}

{% block body %}
<h1>Orden de Compra</h1>

<table class="record_properties">
    <tbody>
        <tr>
            <th>Id</th>
            <td>{{ entity.id }}</td>
        </tr>
        <tr>
            <th>Codigo interno</th>
            <td>{{ entity.codigoInterno }}</td>
        </tr>
        <tr>
            <th>Valor participante</th>
            <td>{{ entity.valorParticipante }}</td>
        </tr>
        <tr>
            <th>Valor total</th>
            <td>{{ entity.valorTotal }}</td>
        </tr>
        <tr>
            <th>Num. otic</th>
            <td>{{ entity.numOtic }}</td>
        </tr>
        <tr>
            <th>Num. participante</th>
            <td>{{ entity.numParticipante }}</td>
        </tr>
        <tr>
            <th>Cod. Sence</th>
            <td>{{ entity.codSence }}</td>
        </tr>
        <tr>
            <th>Forma pago</th>
            <td>{{ entity.formaPago }}</td>
        </tr>
        <tr>
            <th>Fecha</th>
            <td>{{ entity.fecha|date('d-m-Y') }}</td>
        </tr>
    </tbody>
</table>

<ul class="record_actions">
    <li>
        <a href="{{ path('purchaseorder') }}">
            Volver a Listado
        </a>
    </li>
    <li>
        <a href="{{ path('purchaseorder_edit', { 'id': entity.id }) }}">
            Editar
        </a>
    </li>
    <li>
        <form action="{{ path('purchaseorder_delete', { 'id': entity.id }) }}" method="post">
            {{ form_widget(delete_form) }}
            <button type="submit">Eliminar</button>
        </form>
    </li>
</ul>
{% endblock %}
