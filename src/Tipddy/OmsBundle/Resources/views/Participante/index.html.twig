{% extends 'TipddyOmsBundle::layout.html.twig' %}

{% block body %}
<h1>Participante list</h1>

<table class="records_list">
    <thead>
        <tr>
            <th>Id</th>
            <th>Nombre</th>
            <th>Apellido_pat</th>
            <th>Apellido_mat</th>
            <th>Rut</th>
            <th>Fechanacimiento</th>
            <th>Direccion</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td><a href="{{ path('participant_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
            <td>{{ entity.nombre }}</td>
            <td>{{ entity.apellidopat }}</td>
            <td>{{ entity.apellidomat }}</td>
            <td>{{ entity.rut }}</td>
            <td>{% if entity.fechaNacimiento %}{{ entity.fechaNacimiento|date('Y-m-d H:i:s') }}{% endif %}</td>
            <td>{{ entity.direccion }}</td>
            <td>
                <ul>
                    <li>
                        <a href="{{ path('participant_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('participant_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>

<ul>
    <li>
        <a href="{{ path('participant_new') }}">
            Create a new entry
        </a>
    </li>
</ul>
{% endblock %}
