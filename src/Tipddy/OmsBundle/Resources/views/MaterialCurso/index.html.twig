{% extends 'TipddyOmsBundle::layout.html.twig' %}

{% block body %}
<h1>MaterialCurso list</h1>

<table class="records_list">
    <thead>
        <tr>
            <th>Id</th>
            <th>Descripcion</th>
            <th>Cantidad</th>
            <th>Tipomaterial</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td><a href="{{ path('coursematerial_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
            <td>{{ entity.descripcion }}</td>
            <td>{{ entity.cantidad }}</td>
            <td>{{ entity.tipoMaterial }}</td>
            <td>
                <ul>
                    <li>
                        <a href="{{ path('coursematerial_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('coursematerial_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>

<ul>
    <li>
        <a href="{{ path('coursematerial_new') }}">
            Create a new entry
        </a>
    </li>
</ul>
{% endblock %}
