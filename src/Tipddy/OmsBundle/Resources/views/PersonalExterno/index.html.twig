{% extends 'TipddyOmsBundle::layout.html.twig' %}

{% block body %}
<h1>Listado Personal Externo</h1>

<table class="listado">
    <thead>
        <tr>
            <!--<th>Id</th>-->
            <th>Nombre</th>
            <th>Ap. Paterno</th>
            <th>Ap. Materno</th>
            <th>Profesion</th>
            <th width="8%">Rut</th>
            <th width="8%">Fecha nac.</th>
            <th>Email</th>
            <!--<th>Fonofijo</th>
            <th>Fonomovil</th>
