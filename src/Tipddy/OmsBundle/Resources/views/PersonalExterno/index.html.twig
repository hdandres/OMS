    <tbody>
    {% for entity in entities %}
        <tr>
            <!--<td><a href="{{ path('outsidestaff_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>-->
            <td align="center">{{ entity.nombre }}</td>
            <td align="center">{{ entity.apellidoPat }}</td>
            <td align="center">{{ entity.apellidoMat }}</td>
            <td align="center">{{ entity.profesion }}</td>
            <td align="center">{{ entity.rut }}</td>
            <td align="center">{% if entity.fechaNacimiento %}{{ entity.fechaNacimiento|date('d-m-Y') }}{% endif %}</td>
            <td align="center">{{ entity.email }}</td>
            <!--<td>{{ entity.fonoFijo }}</td>
            <td>{{ entity.fonoMovil }}</td>
            <td>{{ entity.direccion }}</td>
            <td>{{ entity.estado }}</td>
            <td>{{ entity.institucionEstudios }}</td>-->
            <td>
                <ul>
                    <li>
                        <a href="{{ path('outsidestaff_show', { 'id': entity.id }) }}">Ver</a>
                          &nbsp;&nbsp;  
                        <a href="{{ path('outsidestaff_edit', { 'id': entity.id }) }}">Editar</a>
                    </li>
                </ul>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>

<ul>
    <li>
        <a href="{{ path('outsidestaff_new') }}">
            Nuevo Registro
        </a>
    </li>
</ul>
{% endblock %}
