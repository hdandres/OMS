{% block body %}
<h1>Listado Cliente</h1>

<table class="listado">
    <thead>
        <tr>
            <!--<th>Id</th>-->
            <th>Nombre</th>
            <th>Apellido</th>
            <th>Tipo</th>
            <th>Descripcion</th>
            <th>Razonsocial</th>
