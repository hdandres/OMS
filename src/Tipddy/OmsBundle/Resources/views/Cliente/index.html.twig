            <td align="center">{{ entity.fonoFijo }}</td>
            <td align="center">{{ entity.fonoMovil }}</td>
            <td align="center">{{ entity.email }}</td>
            <!--<td>{{ entity.sucursal }}</td>
            <td>{{ entity.nombreEncargado }}</td>
            <td>{{ entity.nombreComercial }}</td>
            <td>{{ entity.repreLegal }}</td>
            <td>{{ entity.repreRut }}</td>
            <td>{{ entity.repreNombre }}</td>
            <td>{{ entity.repreFono }}</td>
            <td>{{ entity.repreDireccion }}</td>-->
            <td align="left" width="10%">
                <ul>
                    <li>
                        
                        <a href="{{ path('client_show', { 'id': entity.id }) }}">Ver</a>
                    &nbsp;&nbsp;
                    
                        <a href="{{ path('client_edit', { 'id': entity.id }) }}">Editar</a>
                    </li>
                </ul>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>

<ul>
