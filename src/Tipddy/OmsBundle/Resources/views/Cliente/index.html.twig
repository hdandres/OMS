    <tbody>
    {% for entity in entities %}
        <tr>
            <!--<td><a href="{{ path('client_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>-->
            <td align="center">{{ entity.nombre }}</td>
            <td align="center">{{ entity.apellido }}</td>
            <td align="center">{{ entity.tipo }}</td>
            <td align="center">{{ entity.descripcion }}</td>
            <td align="center">{{ entity.razonSocial }}</td>
            <!--<td align="center">{% if entity.fechaFundacion %}{{ entity.fechaFundacion|date('d-m-Y') }}{% endif %}</td>-->
