{% extends 'TipddyOmsBundle::layout.html.twig' %}

{% block body %}
<h1>Cliente edit</h1>

<form action="{{ path('client_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(form) }}>
    {#{ form_widget(form) }#}
     <fieldset>
        <legend>Editar Cliente</legend>
        {% include 'TipddyOmsBundle:Cliente:_form.html.twig' %}
     </fieldset>

    <p>
        <button type="submit">Editar</button>
    </p>
</form>

<ul class="record_actions">
    <li>
        <a href="{{ path('client') }}">
            Volver a Listado
        </a>
    </li>
    <li>
        <form action="{{ path('client_delete', { 'id': entity.id }) }}" method="post">
            {{ form_widget(delete_form) }}
            <button type="submit">Eliminar</button>
        </form>
    </li>
</ul>
{% endblock %}
